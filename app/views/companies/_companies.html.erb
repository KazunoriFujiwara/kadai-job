<% if companies.any? %>
  <ul class="list-unstyled">
    <% companies.each do |company| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= gravatar_url(company, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div>
            <%= company.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', company_path(company) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate companies %>
<% end %>